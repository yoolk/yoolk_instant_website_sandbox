<h1 class="page-title">{{ 'sample.links.feedback' | translate }}</h1>

<section class="reservation-form">
  {% form 'feedback' %}
    {% if form.posted_successfully? %}
      <div class="successForm feedback">
        <p>Thank you for submitting your feedback! We'll get back to you as soon as possible.</p>
      </div>
    {% endif %}

    {% if form.errors != blank %}
      <div class="errorForm feedback">
        <p>Oops, sorry. We were unable to submit your inquiry because it contained {{ form.errors | size | pluralize: 'an error', 'errors' }}. Please correct the following and submit again:</p>
        <ul>
          {% for field in form.errors %}
            <li>
              <span>{{ field }}</span>
              <span>{{ form.errors.messages[field] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    <div class="form-group">
      <input type="textbox" name="feedback[name]" value="{{ form.name }}" placeholder="Name">
    </div>
    <div class="form-group">
      <input type="textbox" name="feedback[sender]" value="{{ form.sender }}" placeholder="* Email">
      {{ form.errors.messages['sender'] }}
    </div>
    <div class="form-group">
      <textarea name="feedback[body]" rows="5" cols="61">{{ form.body }}</textarea>
      {{ form.errors.messages['body'] }}
    </div>
    <div class="form-group">
      <input type="submit" name="submit" value="Send">
    </div>
  {% endform %}
</section>