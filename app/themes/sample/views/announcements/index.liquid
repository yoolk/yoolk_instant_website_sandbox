<h1 class="page-title">announcement</h1>
{% for announcement in listing.announcements %}
  <article class="announcement">
    {{ announcement.image | attachment_url: 'large' | image_tag }}
    <div class="announcement-description">
      <p>
        {{ announcement.text }}
        <strong class="readmore">
          <a href="{{ announcement.url }}">read more</a>
        </strong>
      </p>
    </div>
    <div class="annnouncement-timestamp">
      <p>
        <time class="timeago icon-time-default tooltip_link" data-toggle="tooltip" datetime="{{ announcement.updated_at | date: '%Y-%m-%d' }}" title="{{ announcement.updated_at | date: '%B %d, %Y %k:%M' }}"></time>
      </p>
    </div>
  </article>
{% endfor %}